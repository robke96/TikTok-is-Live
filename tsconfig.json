{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "ESNext.Array", "DOM"],
    "module": "NodeNext",
    "noImplicitThis": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["./src/**/*.ts", "src/test/index.test.js"]
}